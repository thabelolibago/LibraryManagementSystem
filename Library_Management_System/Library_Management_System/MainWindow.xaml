<Window x:Class="Library_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Management System" Width="1116"  Height="734" Background="#FFFFFF" WindowStartupLocation="CenterScreen">

    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,105,0,0" FontWeight="Bold" ><Run Text="Lib"/><Run Language="en-za" Text="rary"/><Run Text=" Management System"/></TextBlock>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" Height="350" Margin="0,169,0,0" >
            <Button x:Name="SearchForABook" Content="Search And Borrow Book" Height="50" Click="SearchForABookButton" Margin="0,50,0,20" FontSize="18" Background="#FF2AA212" Panel.ZIndex="20" BorderBrush="#FF2AA212" Foreground="GhostWhite"/>
            <Button x:Name="ReturnBook" Content="Return Book" Height="50" Click="ReturnBookButton" FontSize="18" Background="#FF2AA212" Margin="0,0,0,20" BorderBrush="#FF2AA212" Foreground="GhostWhite"/>
            <Button x:Name="ManageMembers" Content="Manage Members" Height="50" Click="ManageMemberButton" FontSize="18" Background="#FF2AA212" Foreground="GhostWhite" BorderBrush="#FF2AA212"/>
        </StackPanel>
        <Button Content="Exit" HorizontalAlignment="Center" Height="42" Margin="0,540,0,0" VerticalAlignment="Top" Width="152" Click="ExitButton" Background="#FFFB1207" FontSize="18" Foreground="White" BorderBrush="#FFFB1207"/>
        <Button Content="Transactions" Click="TransactionButton" HorizontalAlignment="Center" Height="50" Margin="0,430,0,0" VerticalAlignment="Top" Width="300" Background="#FF2AA212" BorderBrush="#FF2AA212" Foreground="GhostWhite" FontSize="18"/>

    </Grid>
</Window>
