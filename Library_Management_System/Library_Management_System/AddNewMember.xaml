<Window x:Class="Library_Management_System.AddNewMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Management_System"
        mc:Ignorable="d"
        Title="AddNewMember" Width="1116"  Height="734" Background="#FFFFFF" WindowStartupLocation="CenterScreen">
    <Grid>
        
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="387,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" FontSize="18"><Run Language="en-za" Text="Names"/></TextBlock>
        <TextBox x:Name="NamesTextBox" Text="Thabelo Libago" Foreground="#FFC1BCBC" HorizontalAlignment="Left" Margin="490,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF2AA212" Background="GhostWhite" FontSize="18" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />

        
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="387,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" FontSize="18" RenderTransformOrigin="0.517,2.977"><Run Language="en-za" Text="Address"/></TextBlock>
        <TextBox x:Name="Member_AddressTextBox" Text="1234 Example Street, City, 1000, South Africa" Foreground="#FFC1BCBC" HorizontalAlignment="Left" Margin="490,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF2AA212" Background="GhostWhite" FontSize="18" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />


        
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="387,341,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" FontSize="18" RenderTransformOrigin="0.62,1.579"><Run Language="en-za" Text="Contact"/></TextBlock>
        <TextBox x:Name="Contact_NumberTextBox" Text="079 223 0111" Foreground="#FFC1BCBC" HorizontalAlignment="Left" Margin="490,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF2AA212" Background="GhostWhite" FontSize="18" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />


        
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="387,421,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" FontSize="18"><Run Language="en-za" Text="Email"/></TextBlock>
        <TextBox x:Name="EmailTextBox" Text="thabelo@library.com" Foreground="#FFC1BCBC" HorizontalAlignment="Left" Margin="490,418,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="30" BorderBrush="#FF2AA212" Background="GhostWhite" FontSize="18" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />


        <Button Content="Submit" Click="SubmitButton" HorizontalAlignment="Center" Height="30" Margin="0,498,0,0" VerticalAlignment="Top" Width="100" Background="#FF2AA212" FontSize="18" BorderBrush="#FF2AA212" Foreground="GhostWhite"/>
        <TextBlock HorizontalAlignment="Left" Height="54" Margin="87,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="605" FontSize="24" FontWeight="Bold"><Run Language="en-za" Text="Add New Member"/></TextBlock>
        <Button Content="←" Click="BackAddNewMemberButton" HorizontalAlignment="Left" Height="22" Margin="960,57,0,0" VerticalAlignment="Top" Width="44" Background="GhostWhite" BorderBrush="Black" />
        <Button Content="X" Click="CloseAddNewMemberButton" HorizontalAlignment="Left" Height="22" Margin="1029,57,0,0" VerticalAlignment="Top" Width="44" Background="#FFEC1212" Foreground="White" BorderBrush="#FFEC1212" RenderTransformOrigin="0.523,-0.135"/>
    </Grid>
</Window>
